# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts must use LF
*.sh text eol=lf

# Windows scripts use CRLF
*.bat text eol=crlf
*.ps1 text eol=crlf

# Docker files use LF
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# YAML files use LF
*.yml text eol=lf
*.yaml text eol=lf
